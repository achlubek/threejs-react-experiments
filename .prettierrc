{
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "importOrderParserPlugins" : ["classProperties", "decorators-legacy", "typescript", "jsx", "tsx"],
        "importOrder": ["^react", "^[^.@]", "^[./]", "^@app/(.*)$"],
        "importOrderSeparation": true,
        "importOrderSortSpecifiers": true
      }
    },
    {
      "files": "*.tsx",
      "options": {
        "importOrderParserPlugins" : ["classProperties", "decorators-legacy", "typescript", "jsx", "tsx"],
        "importOrder": ["^react", "^[^.@]", "^[./]", "^@app/(.*)$"],
        "importOrderSeparation": true,
        "importOrderSortSpecifiers": true
      }
    }
  ],
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf"
}
